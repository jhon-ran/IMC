<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="calculadoraIMC.MainPage"
             Visual="Material">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="250">
        <Label Text="Calcula tu IMC" FontAttributes="Bold" FontSize="40" HorizontalTextAlignment="Center" TextColor="#565168"/>
        <Entry Placeholder="Altura" x:Name="Altura" Keyboard="Numeric"/>
        <Entry Placeholder="Peso" x:Name="Peso" Keyboard="Numeric"/>
        <Entry Placeholder="Tu IMC" x:Name="IMC" IsEnabled="False"/>
        <Button Text="Calcular" Clicked="Button_Clicked" BackgroundColor="DarkMagenta"/>
    </StackLayout>

</ContentPage>
